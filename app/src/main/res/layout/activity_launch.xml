<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.yrom.screenrecorder.ui.activity.LaunchActivity">

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="请输入直播地址" />

    <Button
        android:id="@+id/btn_screen_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Screen record" />

    <Button
        android:id="@+id/btn_camera_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera record" />

    <Button
        android:id="@+id/btn_audio_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="audio record" />


</LinearLayout>
