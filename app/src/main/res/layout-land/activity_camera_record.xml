<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="@dimen/dp_z_160"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#33333333"
        android:gravity="center">

        <Button
            android:id="@+id/btnRecord"
            android:layout_width="@dimen/dp_z_100"
            android:layout_height="@dimen/dp_z_100"
            android:background="@drawable/ic_record_start"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_z_160"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#33333333"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/record_mic_button"
                style="@style/NiceOption_Landscape"
                android:background="@drawable/ic_mic_off_normal"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/camera_flash_button"
                style="@style/NiceOption_Landscape"
                android:background="@drawable/ic_flash_off_normal"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/camera_switch_button"
                style="@style/NiceOption_Landscape"
                android:background="@drawable/ic_switch_camera_back_normal"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/camera_focus_button"
                style="@style/NiceOption_Landscape"
                android:background="@drawable/ic_focus_off_normal"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/camera_render_button"
                style="@style/NiceOption_Landscape"
                android:background="@drawable/ic_render_on_normal"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
